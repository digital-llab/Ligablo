<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.activities.Etablissement_Creation">
    <ScrollView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:id="@+id/etabName"
                android:layout_height="wrap_content"
                android:hint="Nom de l'etablissement"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:id="@+id/intiName"
                android:layout_height="wrap_content"
                android:hint="Intitulé"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:id="@+id/nationalID"
                android:layout_height="wrap_content"
                android:hint="Identité nationale"
                android:inputType="text"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:id="@+id/etabType"
                android:layout_height="wrap_content"
                android:hint="Type d'établissement"
                android:inputType="textEmailAddress"
                android:layout_gravity="center_horizontal"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                android:id="@+id/etabWebSite"
                android:layout_height="wrap_content"
                android:hint="Site Web"
                android:layout_gravity="center_horizontal"
                />

                />
            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnEtabValider"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="#3b5998"

                android:text="@string/valider"
                android:layout_height="35dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>